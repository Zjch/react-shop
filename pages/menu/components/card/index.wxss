@import "/assets/css/common.wxss";
.wrapper {
  width: 100%;
  height: 100%;
  position: relative;
}
.wrapper .chunk {
  position: absolute;
  width: 100%;
  height: 100%;
}
.wrapper .card_box {
  padding: 5px 0;
}
.wrapper .item_card {
  height: 100px;
  padding: 10px 15px;
}
.wrapper .item_card .add_card {
  width: 100%;
  height: 100px;
}
.wrapper .item_card .image_box {
  width: 100px;
  height: 100px;
  background: #f00;
}
.wrapper .item_card .item_right {
  flex-direction: column;
  justify-content: space-between;
  padding: 2px 0;
  padding-left: 10px;
}
.wrapper .item_card .item_right .information .sales {
  font-size: 14px;
  color: #999;
}
.wrapper .item_card .item_right .information .price_box {
  justify-content: space-between;
}
.wrapper .item_card .item_right .information .price_box .price {
  color: #f00;
  font-size: 18px;
  font-weight: bold;
}
.dialog_content {
  padding: 0 15px;
}
.dialog_content .good_img {
  width: 100px;
  height: 100px;
}
.dialog_content .good_box {
  margin-top: 15px;
}
.dialog_content .good_box text {
  color: #333;
  margin-right: 5px;
}
